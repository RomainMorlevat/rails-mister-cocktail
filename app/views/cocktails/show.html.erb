<div class="container">
  <div class="row">
    <div class="col-xs-12 col-sm-6 col-sm-offset-3">
      <h1><%= @cocktail.name %></h1>
      <ul>
        <% @cocktail.doses.each do |dose| %>
          <li><%= dose.description %> <%= dose.ingredient.name %> <%= link_to "Delete", dose_path(dose), method: :delete, data: { confirm: "Are you sure ?" } %></li>
        <% end %>
      </ul>
      <% if @cocktail.photo? %>
        <%= cl_image_tag(@cocktail.photo.path, width: 400, crop: :fill, alt: "Photo de #{@cocktail.name}") %>
      <% end %>
      <%= link_to "Edit", edit_cocktail_path %>
      <%= link_to "Delete", cocktail_path, method: :delete %>

      <%= simple_form_for ([ @cocktail, Dose.new ]) do |f| %>
        <%= f.input :description %>
        <%= f.association :ingredient %>
        <%= f.button :submit %>
      <% end %>

    </div>
  </div>
</div>
