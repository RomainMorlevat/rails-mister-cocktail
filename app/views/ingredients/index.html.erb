<div class="container">
  <div class="row">
    <div class="col-xs-12">
      <ul>
        <% @ingredients.each do |ingredient| %>
          <li><%= ingredient.name %> - <%= link_to "delete", ingredient_path(ingredient), method: :delete %></li>
